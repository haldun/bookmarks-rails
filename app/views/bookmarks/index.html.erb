<h1>Listing bookmarks</h1>

<%= form_tag bookmarks_path, :method => :get do %>
  <p>
    <%= text_field_tag :q, params[:q] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<div id="facets">
  <h3>Timeline</h3>
  <ul>
    <% for row in @search.facet(:created_month).rows.reverse! %>
      <li>
        <% if params[:month].blank? %>
          <%= link_to row.value.strftime("%B %Y"), :month => row.value %> (<%= row.count %>)
        <% else %>
          <strong><%= row.value %></strong> (<%= link_to "remove", :month => nil %>)
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<table>
  <tr>
    <th>Title</th>
    <th>Tags</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bookmarks.each do |bookmark| %>
  <tr>
    <td><a href="<%= bookmark.uri %>"><%= bookmark.title %></a></td>
    <td><%# bookmark.tag_list %></td>
    <td><%= link_to 'Show', bookmark %></td>
    <td><%= link_to 'Edit', edit_bookmark_path(bookmark) %></td>
    <td><%= link_to 'Destroy', bookmark, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

